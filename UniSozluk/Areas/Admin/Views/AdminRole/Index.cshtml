@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">

                    <h5>Role Listesi</h5>
                    

                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                   
                                    <th>Role Adı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="gradeX">
                                        
                                        <td>@item.Name</td>
                                        <td class="center"><a href="/Admin/AdminRole/EditRole/@item.Id"><i class="fa fa-edit"></i></a></td>
                                        <td class="center"><a href="/Admin/AdminRole/DeleteRole/@item.Id"><i class="fa fa-trash"></i></a></td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                   
                                    <th>Role Adı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>

                                </tr>
                            </tfoot>
                        </table>
                        <a href="/Admin/AdminRole/AddRole/" class="btn btn-info float-right">Yeni Role Ekle</a>
                        <a href="/Admin/AdminRole/AddRole/" class="btn btn-info float-left">Kullanıcı Rol Listesi</a>
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

