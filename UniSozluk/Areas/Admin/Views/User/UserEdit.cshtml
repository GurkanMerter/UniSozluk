@model EntityLayer.Concrete.Person
@{
    ViewData["Title"] = "PersonEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-10 col-md-11">
    <div class="card mb-4">
        <div class="card-header">
            Entry Düzenleme
        </div>
        @using (Html.BeginForm("PersonEdit", "Person", FormMethod.Post))
        {
            <div class="container-fluid mt-2">
                <div class="form-group">
                    @Html.TextBoxFor(x=>x.PersonID,new{@class="form-control", @hidden="true"})
                </div>
                <div class="form-group">
                    @Html.Label("Üniversite:")
                    @Html.TextBoxFor(x=>x.Departmant.University.UniversityName,new {@class = "form-control", @readonly="readonly"})
                </div>
                <div class="form-group">
                    @Html.Label("Bölüm:")
                    @Html.DropDownListFor(x=>x.DepartmantID,(List<SelectListItem>)ViewBag.depValue,new{@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye ismi:")
                    @Html.TextBoxFor(x=>x.PersonFirstName,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye soy ismi:")
                    @Html.TextBoxFor(x=>x.PersonLastName,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye kullanıcı adı:")
                    @Html.TextBoxFor(x=>x.PersonNickName,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye mail:")
                    @Html.TextBoxFor(x=>x.PersonMail,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye şifre:")
                    @Html.TextBoxFor(x=>x.PersonPassword,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye tel no:")
                    @Html.TextBoxFor(x=>x.PersonTelNo,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üye statü:")
                    @Html.TextBoxFor(x=>x.PersonStatus,new {@class = "form-control"})
                </div>
             
                <button type="submit" class="btn btn-success float-right mb-3">
                    Güncelle
                </button>
            </div>
        }

    </div>

</div>

