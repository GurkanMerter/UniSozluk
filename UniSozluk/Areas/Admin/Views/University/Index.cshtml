@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<University>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Üniversite Listesi</h5>

                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>UniversiteID</th>
                                    <th>Üniversite Adı</th>
                                    <th>Üniversite Statü</th>
                                    <th>Bölüm Sayısı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr class="gradeX">
                                        <td>@item.UniversityID</td>
                                        <td>@item.UniversityName</td>
                                        <td class="center">@item.UniversityStatus</td>
                                        <td class="center">@item.Departmants.Count()</td>
                                        <td class="center"><a href="/Admin/University/UniversityEdit/@item.UniversityID"><i class="fa fa-edit"></i></a></td>
                                        <td class="center"><a href="/Admin/University/UniversityDelete/@item.UniversityID"><i class="fa fa-trash"></i></a></td>
                                    </tr>


                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>UniversiteID</th>
                                    <th>Üniversite Adı</th>
                                    <th>Üniversite Statü</th>
                                    <th>Bölüm Sayısı</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </tfoot>
                        </table>
                        <br />
                        @Html.PagedListPager((IPagedList)Model,page => Url.Action("Index",new {page}) )
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




