@using EntityLayer.Concrete
@model List<Entry>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@foreach (var item in Model)
{
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>@item.Departmant.University.UniversityName - @item.Departmant.DepartmantName</h5>
                <div class="ibox-tools">
                    
                    <a class="dropdown-toggle" href="/Admin/Entry/EntryEdit/@item.EntryID">
                        <i class="fa fa-wrench"></i>
                    </a>
                    
                    <a class="dropdown-toggle" href="/Admin/Entry/EntryDelete/@item.EntryID">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="scroll_content">
                    @item.EntryContent
                </div>
            </div>
            <div class="ibox-footer">
                <div class="row container">
                    <div class="col-7">
                        <a href="#">
                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.EntryCreateDate).ToString("dd-MMM-yyyy"))
                        </a><a href="#">
                            <i class="far fa-thumbs-up pl-2"></i> 201 Likes
                        </a><a href="#">
                            <i class="far fa-comment pl-2"></i> 15 Comments
                        </a>
                    </div>

                    @await Component.InvokeAsync("GetUserNickName",new {id=item.UserID})

                </div>

            </div>
        </div>
    </div>
}

<br />
<br />

<script src="~/inspinia-gh-pages/js/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="~/inspinia-gh-pages/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

<!-- Custom and plugin javascript -->
<script src="~/inspinia-gh-pages/js/inspinia.js"></script>
<script src="~/inspinia-gh-pages/js/plugins/pace/pace.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        // Add slimscroll to element
        $('.scroll_content').slimscroll({
            height: '200px'
        })

    });

</script>

