@model EntityLayer.Concrete.Entry

@{
    ViewData["Title"] = "EntryEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12 mt-3">
    <div class="card mb-4">
        <div class="card-header">
            Entry Düzenleme
        </div>
        @using (Html.BeginForm("EntryEdit", "Entry", FormMethod.Post))
        {
            <div class="container-fluid mt-2">
                <div class="form-group">
                    @Html.TextBoxFor(x=>x.EntryID,new{@class="form-control", @hidden="true"})
                </div>
                <div class="form-group">
                    @Html.Label("UserID:")
                    @Html.TextBoxFor(x=>x.UserID,new {@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Üniversite:")
                    @Html.TextBoxFor(x=>x.Departmant.University.UniversityName,new {@class = "form-control", @readonly="readonly"})
                </div>
                <div class="form-group">
                    @Html.Label("Bölüm:")
                    @Html.DropDownListFor(x=>x.DepartmantID,(List<SelectListItem>)ViewBag.depValue,new{@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Entry İçeriği:")
                    @Html.TextAreaFor(x=>x.EntryContent,10,3,new{@class = "form-control"})
                    @Html.ValidationMessageFor(x=>x.EntryContent)
                </div>
                <div class="form-group">
                    @Html.Label("Entry Status:")
                    @Html.TextBoxFor(x=>x.EntryStatus,new {@class = "form-control"})
                </div>
                <button type="submit" class="btn btn-success float-right mb-3">
                    Güncelle
                </button>
            </div>
        }

    </div>

</div>


