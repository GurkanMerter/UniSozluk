@using EntityLayer.Concrete
@model List<Entry>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@foreach (var item in Model)
{
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>@item.Departmant.University.UniversityName - @item.Departmant.DepartmantName</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-Person">
                        <li>
                            <a href="#" class="dropdown-item">Config option 1</a>
                        </li>
                        <li>
                            <a href="#" class="dropdown-item">Config option 2</a>
                        </li>
                    </ul>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="scroll_content">
                    @item.EntryContent
                </div>
            </div>
            <div class="ibox-footer">
                <div class="row container">
                    <div class="col-7">
                        <a href="#">
                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.EntryCreateDate).ToString("dd-MMM-yyyy"))
                        </a><a href="#">
                            <i class="far fa-thumbs-up pl-2"></i> 201 Likes
                        </a><a href="#">
                            <i class="far fa-comment pl-2"></i> 15 Comments
                        </a>
                    </div>

                    @await Component.InvokeAsync("GetPersonNickName",new {id=item.PersonID})

                </div>

            </div>
        </div>
    </div>
}