@using EntityLayer.Concrete
@model Person
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container ">
    <div class="row">
        <div class="card mb-4 bg-gradient-success col-6">
            <div class="card-body text-white">
                @ViewBag.universityEntryCount
            </div>
        </div><div class="card mb-4 bg-gradient-success col-6 ">
            <div class="card-body text-white">
                @ViewBag.userEntryCount
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card mb-4 bg-gradient-success col-6">
            <div class="card-body text-white">
                @Model.PersonName
            </div>
        </div><div class="card mb-4 bg-gradient-success col-6 ">
            <div class="card-body text-white">
                @Model.PersonNickName
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card mb-4 bg-gradient-success col-6">
            <div class="card-body text-white">
                @Model.PersonTelNo
            </div>
        </div><div class="card mb-4 bg-gradient-success col-6 ">
            <div class="card-body text-white">
                @Model.PersonMail
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card mb-4 bg-gradient-success col-6">
            <div class="card-body text-white">
                @Model.Departmant.DepartmantName
            </div>
        </div>
        <div class="card mb-4 bg-gradient-success col-6 ">
            <div class="card-body text-white">
                @Model.Departmant.University.UniversityName
            </div>
        </div>
    </div>

</div>


