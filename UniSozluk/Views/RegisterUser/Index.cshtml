@model UserRegisterViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                <h6 class="logo-name">Uni</h6>
            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturun</p>
            <form  id="formid" class="m-t" role="form" asp-action="Index">

                <div class="form-group">
                    <span asp-validation-for="@Model.FirsName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adınız" required="" asp-for="@Model.FirsName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Adınız" required="" asp-for="@Model.LastName">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" placeholder="Email" asp-for="@Model.Mail">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.NickName" class="text-danger"></span>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="@Model.NickName">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.University" class="text-danger"></span>
                    @* <input type="text" class="form-control" placeholder="" required="" asp-for="@Model.University">*@
                    <select class="form-control form-control-range " style="border-radius:30px" id="UniversityList" asp-for="@Model.University">
                        <option>Bir Üniversite Seçiniz</option>
                        @foreach (var item in Model.Universities)
                        {
                            <option value="@item.UniversityID">@item.UniversityName</option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.DepartmantID" class="text-danger"></span>
                    <select class="form-control form-control-range " style="border-radius:30px" id="DepartmantList" name="DepartmantID" asp-for="@Model.DepartmantID">
                        <option>Bir Bölüm Seçiniz</option>
                    </select>
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre" required="" asp-for="@Model.Password">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" placeholder="Şifre Tekrar" required="" asp-for="@Model.ConfirmPassword">
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanın Şartlarını Okudum Kabul Ediyorum </label></div>
                </div>
                @*<button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>*@
                <button type="submit" class="btn btn-primary block full-width m-b" onclick="formSubmit()">Kayıt Ol</button>
                <p class="text-muted text-center"><small>Bir Hesabınız var mı?</small></p>

                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login/">Giriş Yap</a>

            </form>
            <p class="m-t"> <small>| Tüm Hakları Saklıdır &copy; @DateTime.Now.Year |</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#UniversityList').change(function () {
                $('#DepartmantList').empty();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetDepartmantList")',
                    dataType: 'json',
                    data: { id: $('#UniversityList').val() },

                    success: function (departmants) {
                        $('#DeparmantList').append('<option value"' + (-1) + '">'
                            + "Bölüm Seçiniz" + '</option>');
                        $.each(departmants, function (i, departmant) {
                            $('#DepartmantList').append($('<option>').val(departmant.value).text(departmant.text));
                        });
                    }
                });
            });
        });

    </script>
    <script type="text/javascript">
       
        $("#formid").submit(function (event) {
            event.preventDefault(); //burada tıklanınca post işlemi yapmasın diye önlem alıyoruz
            var post_url = $(this).attr("action"); //formun urlsi alınıyor
            var form_data = $(this).serialize(); //formun datası alınıyor

            $.post(post_url, form_data);

            success: function(response){
                window.location.href = '@Url.Action("Index","Login")'
            }

        });
    </script>
</body>

</html>
