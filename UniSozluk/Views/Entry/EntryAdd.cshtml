@model EntityLayer.Concrete.Entry

@{
    ViewData["Title"] = "EntryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-10 col-md-11">
    <div class="card mb-4 bg-gray-400" >
        <div class="card-header">
            <h6 class="m-0 font-weight-bold " style="color:purple">Entry Ekleme</h6>
        </div>
        
        @using (Html.BeginForm("EntryAdd", "Entry", FormMethod.Post))
        {
            <div class="container-fluid mt-2">
                
                <div class="form-group">
                    @Html.Label("Üniversite:")
                    @Html.DropDownListFor(x=>x.DepartmantID,(List<SelectListItem>)ViewBag.depValue2,new{@class = "form-control",@disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.Label("Bölüm:")
                    @Html.DropDownListFor(x=>x.DepartmantID,(List<SelectListItem>)ViewBag.depValue,new{@class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Entry İçeriği:")
                    @Html.TextAreaFor(x=>x.EntryContent,10,3,new{@class = "form-control"})
                    @Html.ValidationMessageFor(x=>x.EntryContent)
                </div>
                <button type="submit" class="btn btn-success float-right mb-3">
                    GÖNDER
                </button>
            </div>
        }

    </div>

</div>

